- if browser.device.mobile? || browser.device.tablet?
  - if Slider.all[0]
    - if Slider.all[0].images
      - if browser.device.mobile?
        .slider{style: "width: 100%; height: 160px; margin: 25px auto 25px auto;"}
          %ul.bxslider
            - Slider.all[0].images.each do |image|
              %li= image_tag image.slider_image.url(:mobile), title: image.title, alt: image.alt, draggable: false, ondragstart: "return false;", style: "width: 100%; height: 100%; -moz-user-select: none; -webkit-user-select: none; -ms-user-select: none; user-select: none;"
      - else
        .slider{style: "width: 100%; height: 240px; margin: 25px auto 25px auto;"}
          %ul.bxslider
            - Slider.all[0].images.each do |image|
              %li= image_tag image.slider_image.url(:tablet), title: image.title, alt: image.alt, draggable: false, ondragstart: "return false;", style: "width: 100%; height: 100%; -moz-user-select: none; -webkit-user-select: none; -ms-user-select: none; user-select: none;"
- else
  - if Slider.all[0]
    - if Slider.all[0].images
      .slider{style: "width: 720px; height: 360px; margin: 25px auto 25px auto;"}
        %ul.bxslider
          - Slider.all[0].images.each do |image|
            %li= image_tag image.slider_image.url(:pc), title: image.title, alt: image.alt, draggable: false, ondragstart: "return false;", style: "width: 100%; height: 100%; -moz-user-select: none; -webkit-user-select: none; -ms-user-select: none; user-select: none;"
