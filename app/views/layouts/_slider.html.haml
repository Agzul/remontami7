- if browser.device.mobile? || browser.device.tablet?
  - if Slider.all[0]
    - if Slider.all[0].images
      - if browser.device.mobile?
        .slider{style: "width: 100%; height: 120px; margin: auto;"}
          %ul.bxslider
            - Slider.all[0].images.each do |image|
              %li= image_tag image.slider_image.url(:mobile)
      - else
        .slider{style: "width: 100%; height: 240px; margin: auto;"}
          %ul.bxslider
            - Slider.all[0].images.each do |image|
              %li= image_tag image.slider_image.url(:tablet)
- else
  - if Slider.all[0]
    - if Slider.all[0].images
      .slider{style: "width: 720px; height: 360px; margin: auto;"}
        %ul.bxslider
          - Slider.all[0].images.each do |image|
            %li= image_tag image.slider_image.url(:pc), draggable: false, ondragstart: "return false;", style: "-moz-user-select: none; -webkit-user-select: none; -ms-user-select: none; user-select: none;"
