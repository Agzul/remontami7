.mdl-layout__drawer
  - if current_user && current_user.admin
    %span.mdl-layout-title Админка
    %nav.mdl-navigation
      = link_to "Выход", :logout, method: :post, class: "mdl-navigation__link"
      = link_to "Слайдеры", sliders_path,        class: "mdl-navigation__link"

  - if browser.device.mobile? || browser.device.tablet?
    %span.mdl-layout-title.mdl-layout--small-screen-only Главное меню
    %nav.mdl-navigation.mdl-layout--small-screen-only
      = link_to "Главная",           root_path,                                                     class: "mdl-navigation__link"
      = link_to "Цены",              { controller: :main_menu, action: :prices },                   class: "mdl-navigation__link"
      = link_to "Наши работы",       galleries_path,                                                class: "mdl-navigation__link"
      = link_to "Информация",        { controller: :informaciya, action: :index },                  class: "mdl-navigation__link"
      = link_to "Расход материалов", { controller: :main_menu, action: :consumption_of_materials }, class: "mdl-navigation__link"
      = link_to "Контакты",          { controller: :main_menu, action: :contacts },                 class: "mdl-navigation__link"
      = link_to "Статьи",            articles_path,                                                 class: "mdl-navigation__link"


  %span.mdl-layout-title Виды ремонта
  %nav.mdl-navigation
    = link_to "Евроремонт",    { controller: :vidy_remonta, action: :evroremont_kvartir },             class: "mdl-navigation__link"
    = link_to "Капитальный",   { controller: :vidy_remonta, action: :kapitalnyj_remont_kvartir },      class: "mdl-navigation__link"
    = link_to "Косметический", { controller: :vidy_remonta, action: :kosmeticheskiy_remont_kvartiry }, class: "mdl-navigation__link"
    = link_to "Под ключ",      { controller: :vidy_remonta, action: :remont_kvartir_pod_klyuch },      class: "mdl-navigation__link"
    = link_to "Комплексный",   { controller: :vidy_remonta, action: :kompleksnyj_remont_kvartir },     class: "mdl-navigation__link"
    = link_to "В новостройке", { controller: :vidy_remonta, action: :remont_v_novostrojke },           class: "mdl-navigation__link"
    = link_to "Черновой",      { controller: :vidy_remonta, action: :chernovoj_remont_v_novostrojke }, class: "mdl-navigation__link"
    = link_to "Частичный",     { controller: :vidy_remonta, action: :chastichnyj_remont_kvartir },     class: "mdl-navigation__link"
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Отдельными комнатами
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Отдельными комнатами", { controller: :vidy_remonta, action: :kosmeticheskij_remont_komnaty }
        = link_to "Кухня",                { controller: :vidy_remonta, action: :remont_kuhni }
        = link_to "Прихожая",             { controller: :vidy_remonta, action: :remont_koridora_pod_kljuch }
        = link_to "Ванная",               { controller: :vidy_remonta, action: :remont_vannoj_komnaty_v_moskve }
        = link_to "Гостиная",             { controller: :vidy_remonta, action: :remont_gostinoj }
        = link_to "Спальня",              { controller: :vidy_remonta, action: :remont_spalni }
        = link_to "Детская",              { controller: :vidy_remonta, action: :remont_detskoy_komnaty }
        = link_to "Туалет санузел",       { controller: :vidy_remonta, action: :remont_tualeta_v_kvartire }


  %span.mdl-layout-title Виды работ
  %nav.mdl-navigation
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Подготовка стен
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Подготовка стен",        { controller: :vidy_rabot, action: :shpaklevka_sten_cena }
