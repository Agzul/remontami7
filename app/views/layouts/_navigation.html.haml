    = link_to "Штукатурка", { controller: :vidy_rabot, action: :shtukaturka_sten_cena }, class: "mdl-navigation__link"
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Поклейка обоев
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Поклейка обоев",    { controller: :vidy_rabot, action: :pokleyka_oboev_cena }
