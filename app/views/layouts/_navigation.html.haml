        = link_to "Под покраску",      { controller: :vidy_rabot, action: :pokleyka_oboev_pod_pokrasku }
        = link_to "Стеклообои",        { controller: :vidy_rabot, action: :pokleyka_steklooboev }
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Покраска стен потолков
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Покраска стен потолков", { controller: :vidy_rabot, action: :pokraska_sten_potolka_cena }
        = link_to "Покраска стен",          { controller: :vidy_rabot, action: :pokraska_sten_cena }
        = link_to "Покраска потолка",       { controller: :vidy_rabot, action: :pokraska_potolka_cena }
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Стяжка пола
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Стяжка пола",                { controller: :vidy_rabot, action: :stjazhka_pola_cena }
        = link_to "Самовыравнивающаяся стяжка", { controller: :vidy_rabot, action: :samovyravnivajushhajasja_stjazhka }
        = link_to "С керамзитом",               { controller: :vidy_rabot, action: :stjazhka_pola_s_keramzitom }
    = link_to "Укладка ламината",        { controller: :vidy_rabot, action: :ukladka_laminata_cena },   class: "mdl-navigation__link"
    = link_to "Укладка паркетной доски", { controller: :vidy_rabot, action: :ukladka_parketnoy_doski }, class: "mdl-navigation__link"
    .dropdown
      %a.mdl-navigation__link{ "data-toggle": "dropdown" }
        Укладка плитки
        %i.arrow{ "data-arrow": "bottom" }
      .dropdown-content{ "data-dropdown_content": "hidden" }
        = link_to "Укладка плитки",          { controller: :vidy_rabot, action: :ukladka_plitki }
        = link_to "Укладка плитки на стену", { controller: :vidy_rabot, action: :ukladka_plitki_na_stenu }
        = link_to "Укладка плитки на пол",   { controller: :vidy_rabot, action: :ukladka_plitki_na_pol }
        = link_to "Укладка керамогранита",   { controller: :vidy_rabot, action: :ukladka_keramogranita_cena }
    = link_to "Утепление балкона лоджии", { controller: :vidy_rabot, action: :uteplenie_i_otdelka_balkonov_i_lodzhij }, class: "mdl-navigation__link"
    = link_to "Установка межкомнатных дверей", { controller: :vidy_rabot, action: :ustanovka_mezhkomnatnyh_dverej },    class: "mdl-navigation__link"
    = link_to "Натяжные потолки", { controller: :vidy_rabot, action: :natyazhnye_potolki_v_moskve },                    class: "mdl-navigation__link"
