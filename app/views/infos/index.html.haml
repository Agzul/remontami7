%h1 Информация о ремонте квартир
- if current_user && current_user.admin
  = link_to new_info_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" do
    %i.material-icons note_add
%br
- @infos.each do |info|
  - if current_user && current_user.admin
    = link_to edit_info_path(info), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" do
      %i.material-icons edit
    = link_to info, method: :delete, data: { confirm: 'Are you sure?' }, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" do
      %i.material-icons delete
  .info_block{style: "display: flex; align-items: center; margin-bottom: 10px;"}
    - if info.images.exists?
      = link_to (image_tag info.images[0].info_image.url(:thumb)), info, target: "_blank"
    = link_to info.name, info, class: "blue", target: "_blank"
  .row
